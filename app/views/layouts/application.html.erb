<!DOCTYPE html>
<html>
<head>
  <title>Fubuki</title>
  <%= stylesheet_link_tag    "application", media: "all", "data-turbolinks-track" => true %>
  <%= javascript_include_tag "application", "data-turbolinks-track" => true %>
  <%= csrf_meta_tags %>
  <meta name="viewport" content="width=device-width, initial-scale=1.0">

  <script src="//maps.google.com/maps/api/js?v=3.13&amp;sensor=false&amp;libraries=geometry" type="text/javascript"></script>
  <script src='//google-maps-utility-library-v3.googlecode.com/svn/tags/markerclustererplus/2.0.14/src/markerclusterer_packed.js' type='text/javascript'></script>
</head>
<body>

<% if @current_user %>
  <div class="navbar navbar-fixed-top">
    <div class="navbar-inner" style="padding: 7px;">
      <a class="brand" href="#">みんなで貸駐車</a>
      <ul class="nav">
        <li><%= link_to "駐車場一覧", parkings_path, class: "btn", style: "margin-top:0px;" %></li>
        <li><%= link_to "予約一覧", reservations_path, class: "btn", style: "margin-top:0px;" %></li>
      </ul>
      <ul class="nav pull-right">
        <li style="padding-right: 8px;"><p class="navbar-text" style="font-size:20px; width:100px;"><i class="icon-user icon-white"></i> <%= @current_user.try(:name) %></p></li>
        <li style="padding-right: 20px;"><p class="navbar-text" style="font-size:16px;"><%= @current_user.try(:point) %>ポイント</p></li>
        <li><%= link_to t("helpers.links.logout"), login_path(@current_user), class: "btn", method: :delete, style: "margin-top:0px;" %></li>
      </ul>
    </div>
  </div>
<% end %>

<div class="container">
  <div class="row">
    <div id="main" class="col-xs-* col-sm-* col-md-*">
      <%= flash_messages(flash) %>
      <%= yield %>
    </div>
  </div>
</div>

</body>
</html>
