<div style="margin-top: 10px;">
  <%= form_tag logins_path, class: 'form-horizontal' do %>
    <div class="control-group">
      <%= label_tag :name, nil,:class => 'control-label' %>
      <div class="controls">
        <%= text_field_tag :name, @name %>
      </div>
    </div>
    <div class="control-group">
      <%= label_tag :passowrd, nil, :class => 'control-label' %>
      <div class="controls">
        <%= password_field_tag %>
      </div>
    </div>
      <div class="controls">
        <%= submit_tag "ログイン", class: "btn btn-success" %>
      </div>
  <% end %>
</div>